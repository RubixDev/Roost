class Greeter {
    var name

    static fun new(name) {
        var new = this()
        new.name = name
        return new
    }

    fun greet() {
        printl('Hello, ' + this.name + '!')
    }

    fun setName(x) {
        this.name = x
    }
}

var greeter = Greeter.new('World')
greeter.greet()
greeter.setName("Roost")
greeter.greet()
